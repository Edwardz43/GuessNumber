<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBB77"
    tools:context="com.example.edlo.guessnumber.MainActivity">

    <GridLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <FrameLayout
            android:layout_width="322dp"
            android:layout_height="41dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="【猜數字v1.0】"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:layout_column="0"
            android:layout_row="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />
        </FrameLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="3">

            <GridLayout
                android:layout_width="122dp"
                android:layout_height="73dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="設定難度:\n(2~5)"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </GridLayout>

            <GridLayout
                android:layout_width="60dp"
                android:layout_height="67dp"
                android:layout_column="1"
                android:layout_row="0">

                <EditText
                    android:id="@+id/editText3"
                    style="@style/Base.TextAppearance.AppCompat.Widget.Button.Inverse"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp" />
            </GridLayout>

            <GridLayout
                android:layout_width="102dp"
                android:layout_height="79dp"
                android:layout_column="2"
                android:layout_row="0">

                <Button
                    android:id="@+id/button18"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:background="@android:drawable/star_big_off"
                    android:text="開始"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />
            </GridLayout>

        </GridLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
